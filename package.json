{
	"name": "agds-next",
	"version": "0.1.0",
	"main": "index.js",
	"author": "Mike Hazell <mikehazell@users.noreply.github.com>",
	"license": "MIT",
	"private": true,
	"engines": {
		"node": "16"
	},
	"scripts": {
		"postinstall": "manypkg check && preconstruct dev",
		"lint": "yarn lint:example && yarn lint:docs && yarn lint:prettier && yarn lint:typescript",
		"lint:packages": "yarn eslint packages/**",
		"lint:example": "yarn --cwd example-site lint",
		"lint:docs": "yarn --cwd docs lint",
		"lint:prettier": "prettier --list-different \"**/*.{js,jsx,json,ts,tsx,md,mdx,yml,yaml}\"",
		"lint:typescript": "tsc --noEmit",
		"test": "jest",
		"format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md,mdx}\"",
		"example:dev": "yarn --cwd example-site next dev",
		"example:build": "yarn --cwd example-site next build",
		"docs:dev": "yarn --cwd docs dev",
		"docs:build": "yarn --cwd docs build",
		"playroom:dev": "yarn --cwd docs playroom:dev",
		"playroom:build": "yarn --cwd docs playroom:build",
		"storybook:dev": "start-storybook -p 6006",
		"storybook:build": "build-storybook -o docs/public/storybook"
	},
	"devDependencies": {
		"@babel/core": "^7.16.5",
		"@babel/plugin-transform-runtime": "^7.16.4",
		"@babel/preset-env": "^7.16.5",
		"@changesets/cli": "^2.18.0",
		"@emotion/babel-preset-css-prop": "^11.2.0",
		"@manypkg/cli": "^0.19.1",
		"@preconstruct/cli": "^2.1.5",
		"@preconstruct/next": "^3.0.1",
		"@storybook/addon-actions": "^6.4.4",
		"@storybook/addon-essentials": "^6.4.4",
		"@storybook/addon-links": "^6.4.4",
		"@storybook/react": "^6.4.4",
		"@types/jest": "^27.0.3",
		"@types/node": "16.11.7",
		"@types/react": "17.0.34",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"babel-jest": "^27.4.5",
		"babel-loader": "^8.2.3",
		"eslint": "^7.30.0",
		"eslint-config-next": "12.0.4",
		"eslint-config-prettier": "^8.3.0",
		"jest": "^27.4.5",
		"prettier": "^2.4.1",
		"ts-jest": "^27.1.2",
		"typescript": "^4.4.4"
	},
	"workspaces": [
		"packages/*",
		"docs",
		"example-site"
	],
	"preconstruct": {
		"packages": [
			"packages/*"
		]
	},
	"manypkg": {
		"defaultBranch": "main",
		"ignoredRules": [
			"ROOT_HAS_DEV_DEPENDENCIES"
		]
	}
}
