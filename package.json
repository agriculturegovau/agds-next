{
	"name": "agds-next",
	"version": "0.1.0",
	"main": "index.js",
	"author": "Mike Hazell <mikehazell@users.noreply.github.com>",
	"license": "MIT",
	"private": true,
	"engines": {
		"node": "16"
	},
	"scripts": {
		"postinstall": "manypkg check && preconstruct dev",
		"lint": "yarn lint:example && yarn lint:docs && yarn lint:prettier && yarn lint:typescript",
		"lint:example": "yarn --cwd example-site lint",
		"lint:docs": "yarn --cwd docs lint",
		"lint:prettier": "prettier --list-different \"**/*.{js,jsx,json,ts,tsx,md,mdx}\"",
		"lint:typescript": "tsc --noEmit",
		"format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md,mdx}\"",
		"example:dev": "yarn --cwd example-site next dev",
		"example:build": "yarn --cwd example-site next build",
		"docs:dev": "yarn --cwd docs dev",
		"docs:build": "yarn --cwd docs build"
	},
	"devDependencies": {
		"@babel/core": "^7.16.0",
		"@babel/plugin-transform-runtime": "^7.16.4",
		"@babel/preset-env": "^7.16.4",
		"@changesets/cli": "^2.18.0",
		"@manypkg/cli": "^0.19.1",
		"@preconstruct/cli": "^2.1.5",
		"@preconstruct/next": "^3.0.1",
		"@types/node": "16.11.7",
		"@types/react": "17.0.34",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"eslint": "^7.30.0",
		"eslint-config-next": "12.0.4",
		"eslint-config-prettier": "^8.3.0",
		"prettier": "^2.4.1",
		"typescript": "^4.4.4"
	},
	"workspaces": [
		"packages/core"
	],
	"preconstruct": {
		"packages": [
			"packages/*"
		]
	},
	"manypkg": {
		"defaultBranch": "main",
		"ignoredRules": [
			"ROOT_HAS_DEV_DEPENDENCIES"
		]
	}
}
